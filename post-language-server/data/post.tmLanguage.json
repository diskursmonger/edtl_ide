{
	"name": "edtl",
	"scopeName": "source.edtl",
	"fileTypes": [
		"edtl"
	],
	"patterns": [
		{
			"name": "constant.numeric.decimal",
			"match": "\\b[0-9]+(?:.[0-9]+)?\\b"
		},
		{
			"name": "constant.numeric.hexadecimal",
			"match": "\\b0x[0-9a-fA-F]+\\b"
		},
		{
			"name": "constant.numeric.bool",
			"match": "\\b(?:TRUE|FALSE)\\b"
		},
		{
			"name": "keyword.other.edtl",
			"match": "\\b(?:ABBR|END_ABBR|MACROS|END_MACROS)\\b"
		},
		{
			"name": "keyword.other.edtl",
			"match": "\\b(?:REQ|TRIGGER|INVARIANT|FINAL|DELAY|REACTION|RELEASE|NL|END_REQ)\\b"
		},
		{
			"name": "keyword.other.edtl",
			"match": "\\b(?:BOOL|INT|INPUT_PORTS_COUNTER|OUTPUT_PORTS_COUNTER|AT)\\b"
		},
		{
			"name": "keyword.other.edtl",
			"match": "\\b(?:VAR_INPUT|VAR_OUTPUT|VAR_INIT|END_VAR)\\b"
		},
		{
			"name": "keyword.other.edtl",
			"match": "\\b(?:T#|d|h|m|s|ms)\\b"
		},
		{
			"name": "keyword.other.edtl",
			"match": "\\b(?:OR|XOR|AND|FE|RE|HIGH|LOW|NOT|TAU)\\b"
		},
		{
			"name": "comment.line.double-slash.edtl",
			"match": "\\s*//.*$"
		},
		{
			"name": "comment.block.edtl",
			"begin": "(?:/|\\()\\*",
			"end": "\\*(?:/|\\))"
		}
	]
}